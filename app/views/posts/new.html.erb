<h2><%= link_to "SELL-UR-SELF!", root_path %></h2>

<h4>Submit your work here</h4>

<%= form_tag({:controller => "posts", :action => "create"}, :method => "post") do %>
	<%= label_tag :Describe, "DESCRIBE" %>
	<%= text_area_tag :title, params[:title] %>
	<%= label_tag :url, "URL" %>
	<%= text_field_tag :url, params[:url] %> <br/>
	<%= submit_tag "Submit-your-work!" %>
<% end %>	
